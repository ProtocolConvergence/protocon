
// 3-coloring protocol
// We want no two adjacent colors to be the same.

constant N := 5;

variable c[Int % N] <- Int % 3;

process P[i <- Int % N]
{
  let pd := i-1;
  let sc := i+1;
  symmetric j <- {# i-1, i+1 #}
  {
    read: c[j];
  }
  write: c[i];
  invariant: (c[i] != c[i-1]) && (c[i] != c[i+1]);
}

