constant N := 3;

variable x[Nat % N] <- Nat % 3;

process P[i <- Nat % N]
{
  read: x[i-1];
  write: x[i];
  read: x[i+1];

  (future & silent)
    (x[i-1]!=x[i] && x[i]!=x[i+1]);

  // Assign x[i] to anything that differs from x[i-1] and x[i+1].
  puppet action:
    ( x[i-1]==x[i] || x[i]==x[i+1] -=> x[i]:=_; )
    ;
}
