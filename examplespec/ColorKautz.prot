
constant N := 6;
constant M := 4;

variable x[Nat % N] <- Nat % M;

process P[i <- Nat % N]
{
  let j_tmp := (N-1-i)/2;
  let k_tmp := N-1-(i/2);


  let j := if (j_tmp != i) then (j_tmp) else (k_tmp);
  let k := if (k_tmp != i) then (k_tmp) else (j_tmp);


  read: x[j];
  read: x[k];
  write: x[i];
}

(future & silent)
  (forall i <- Nat % N :
   (forall q <- Nat % 2 :
    (i == -(2*i + q+1) % N)
    ||
    (x[i] != x[-(2*i + q+1)])
   )
  )
  ;

