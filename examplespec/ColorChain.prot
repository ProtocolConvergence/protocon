
constant N := 3;

variable x[Nat % N] <- Nat % 2;

(future & silent)
  (forall i <- Nat % (N-1) : x[i]!=x[i+1])
  ;

process Bot[i <- Int % 1]
{
  write: x[0];
  read: x[1];
}

process P[j <- Int % (N-2)]
{
  let i := j+1;
  read: x[i-1];
  write: x[i];
  read: x[i+1];
}

process Top[j <- Int % 1]
{
  read: x[N-2];
  write: x[N-1];
}

